{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es5", "es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@common-basic-utils/utils": ["./packages/utils/src"]
    }
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
